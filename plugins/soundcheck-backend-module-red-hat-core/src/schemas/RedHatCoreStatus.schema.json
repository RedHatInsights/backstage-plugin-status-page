{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "RedHatCoreStatusSchema",
  "title": "Red Hat Core - Status",
  "description": "Drupal status report information. ",
  "type": "object",
  "properties": {
    "statuses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "severity": {
            "type": "integer",
            "description": "Comes from Drupal REQUIREMENT_ constants. See https://api.drupal.org/api/drupal/core%21includes%21install.inc/11.x."
          }
        },
        "examples": [
          {
            "id": "drupal",
            "title": "Drupal",
            "value": "11.1.1",
            "severity": -1
          },
          {
            "id": "conflicting emails",
            "title": "Conflicting user emails",
            "value": "",
            "severity": 1
          }
        ],
        "required": [
          "id",
          "title",
          "value",
          "severity"
        ]
      }
    }
  },
  "required": [
    "statuses"
  ]
}
